<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#1b9ef0;">
  <a class="navbar-brand mt-1 h1" href="/">Studire</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto mr-4">
      <% if user_signed_in? %>
          <%= form_tag(root_path,method: :get, enforce_utf8: false, class: 'form-inline mr-sm-2 ')  do %>
            <%= text_field_tag :q, params[:q], placeholder: '検索するテキストを入力...', class: "nav-form mr-1" %>
              <%= button_tag type: 'submit', name: nil, class: 'btn btn-search' do %>
                <i class="fas fa-search"></i>
              <% end %>
          <% end %>
        <li class="nav-item active"><%= link_to root_path, class: 'nav-link' do %><i class="fas fa-home"></i> HOME<% end %></li>
        <li class="nav-item active"><%= link_to new_post_path, class: 'nav-link' do %><i class="fas fa-pen"></i> 記事の投稿<% end %></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to user_path(current_user), class: 'dropdown-item' do %><i class="fas fa-user"></i> マイページ<% end %>
            <%= link_to edit_user_registration_path, class: 'dropdown-item' do %><i class="fas fa-user-edit"></i>ユーザ情報の変更<% end %>
            <div class="dropdown-divider"></div>
            <%= link_to sign_out_path,class: 'dropdown-item' do %><i class="fas fa-power-off"></i> ログアウト<% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active"><%= link_to '会員登録', new_user_registration_path, class: 'nav-link' %></li>
        <li class="nav-item active"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </div>
</nav>
</header>