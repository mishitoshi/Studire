<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#2496EC;">
  <a class="navbar-brand mb-0 h1" href="/">Studire</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto mr-4">
      <% if user_signed_in? %>
      
        <dl class="searchbox">
          <%= form_tag(root_path,method: :get, enforce_utf8: false)  do %>
            <dt><%= text_field_tag :q, params[:q], placeholder: '検索するテキストを入力...' %></dt>
            <dd><%= submit_tag('検索', name: nil) %></dd>
          <% end %>
        </dl>

        <li class="nav-item active"><%= link_to '記事の投稿', new_post_path, class: 'nav-link' %></li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'My profile', user_path(current_user), class: 'dropdown-item' %>
            <%= link_to 'ユーザー情報の変更', edit_user_registration_path, class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'ログアウト', sign_out_path,class: 'dropdown-item' %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active"><%= link_to '会員登録', new_user_registration_path, class: 'nav-link' %></li>
        <li class="nav-item active"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </div>
</nav>
</header>