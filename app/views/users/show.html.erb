<div class="row">
  <div class="user-show-header col-xs-12 col-md-3 mt-4">
    <div class="user-show-image">
      <%= image_tag @user.image.to_s, class: 'show-profile-image-circle img-thumbnail' %>
    </div>
    <div>
      <div class="user-show-name text-center"><%= @user.name %></div>
      <hr>
      <div class="mb-1"><i class="fas fa-address-card"></i> Profile</div>
      <p class="user-show-profile"><%= @user.profile %></p>
      <% if current_user == @user %>
        <hr>
        <%= link_to edit_user_registration_path(current_user), class: 'user-show-to-edit' do %>
          <i class="fas fa-user-edit"></i> プロフィールの編集
        <% end %>
      <% end %>
      <hr>
      <%= render 'relationships/follow_button', user: @user %> 
    </div>
  </div>
  <div class="col-xs-12 col-md-9 mt-4 user-show-height">
    <div>
      <ul id="myTab" class="nav nav-tabs" role="tablist">
        <li class="nav-item"><%= link_to "#mypost", id: 'mypost-tab', class: 'nav-link active', role: 'tab', data: { toggle: 'tab' }, aria: { controls: "mypost" }, aria: { selected: "true" } do %>投稿 <span class="badge"><%= @count_posts %></span><% end %></li>
        <li class="nav-item"><%= link_to "#followings", id: 'followings-tab', class: 'nav-link', role: 'tab', data: { toggle: 'tab' }, aria: { controls: "followings" }, aria: { selected: "false" } do %>Followings <span class="badge"><%= @count_followings %></span><% end %></li>
        <li class="nav-item"><%= link_to "#followers", id: 'followers-tab', class: 'nav-link', role: 'tab', data: { toggle: 'tab' }, aria: { controls: "followers" }, aria: { selected: "false" }  do %>Followers <span class="badge"><%= @count_followers %></span><% end %></li>
      </ul>
      <div id="myTabContent" class="tab-content pt-3 user-show-nav">
        <div id="mypost" class="tab-pane active" role="tabpanel" aria-labelledby="mypost-tab">
          <%= render 'posts/posts', posts: @posts %>
        </div> 
        <div id="followings" class="tab-pane" role="tabpanel" aria-labelledby="followings-tab">
          <%= render 'users', users: @followings %>
        </div> 
        <div id="followers" class="tab-pane" role="tabpanel" aria-labelledby="followers-tab">
          <%= render 'users', users: @followers %>
        </div> 
    </div>
  </div>
</div>


<%#= 'active' if current_page?(user_path(@user)) %> <!--nav-item-->