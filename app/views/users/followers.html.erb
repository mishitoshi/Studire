 <div class="row"> 
  <div class="card col-xs-4" style="width: 18rem;">
    <%= image_tag @user.image.to_s, class: 'card-img-top' %>
    <div class="card-body">
      <h5 class="card-title"><%= @user.name %></h5>
      <p class="card-text"><%= @user.profile %></p>
      <%= render 'relationships/follow_button', user: @user %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <ul class="nav justify-content-center">
        <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>投稿 <span class="badge"><%= @count_posts %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followings_user_path(@user)) %>"><%= link_to followings_user_path(@user) do %>Followings <span class="badge"><%= @count_followings %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followers_user_path(@user)) %>"><%= link_to followers_user_path(@user) do %>Followers <span class="badge"><%= @count_followers %></span><% end %></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
      </ul>
      <%= render 'users', users: @followers %>
    </div>
  </div>
</div>