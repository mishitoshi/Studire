<div class="row">
  <div class="user-show-header col-xs-12 col-md-3 mt-4">
    <div class="user-show-image">
      <%= image_tag @user.image.to_s, class: 'show-profile-image-circle img-thumbnail' %>
    </div>
    <div>
      <div class="user-show-name text-center"><%= @user.name %></div>
      <hr>
      <div class="mb-1"><i class="fas fa-address-card"></i> Profile</div>
      <p class="user-show-profile"><%= @user.profile %></p>
      <% if current_user == @user %>
        <hr>
        <%= link_to edit_user_registration_path(current_user), class: 'user-show-to-edit' do %>
          <i class="fas fa-user-edit"></i> プロフィールの編集
        <% end %>
      <% end %>
      <hr>
      <%= render 'relationships/follow_button', user: @user %> 
    </div>
  </div>
  <div class="col-xs-12 col-md-9 mt-4 user-show-height">
    <div class="user-show-nav">
      <ul class="nav nav-tabs">
        <li class="<%= 'active' if current_page?(user_path(@user)) %> nav-link"><%= link_to user_path(@user) do %>投稿 <span class="badge"><%= @count_posts %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followings_user_path(@user)) %> nav-link"><%= link_to followings_user_path(@user) do %>Followings <span class="badge"><%= @count_followings %></span><% end %></li>
        <li class="<%= 'active' if current_page?(followers_user_path(@user)) %> nav-link"><%= link_to followers_user_path(@user) do %>Followers <span class="badge"><%= @count_followers %></span><% end %></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
      </ul>
      <%= render 'users', users: @followers %>
    </div>
  </div>
</div>