<% if users.any? %>
  <ul class="list-unstyled user-p">
    <% users.each do |user| %>
    <li class="media">
        <%= image_tag user.image.to_s, class: 'mr-3', :size => '50x50' %>
      <div class="media-body user-p-content">
        <div class="mt-0">
          <%= link_to "#{user.name}", user_path(user) %>
          <p><%= user.profile %></p> 
        </div>
      </div><!-- /.media-body -->
      <div class="user-p-follow mr-2 mt-2">
        <%= render 'relationships/follow_button', user: user %>
      <div>
    </li><!-- /.media -->
    <hr>
    <% end %>
  <%= paginate users %>
</ul>
<% end %>