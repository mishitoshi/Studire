<% if users.any? %>
  <ul class="list-unstyled user-media">
    <% users.each do |user| %>
      <li class="media">
        <%= image_tag user.image.url, class: 'mr-3 post-user-image', :size => '50x50' %>
        <div class="media-body user-media-content">
          <div class="mt-0">
            <div class="user-media-header">
              <%= link_to "#{user.name}", user_path(user) %>
              <%= render 'relationships/follow_button', user: user %>
            </div>
            <p><%= user.profile %></p>
          </div>
        </div>
      </li>
      <hr>
    <% end %>
    <%= paginate users %>
  </ul>
<% end %>